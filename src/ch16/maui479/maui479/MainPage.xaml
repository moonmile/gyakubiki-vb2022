<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maui479.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label 
                Text="加速度を取得"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Button 
                Text="開始"
                FontAttributes="Bold"
                Command="{Binding OnClickedCommand}"
                HorizontalOptions="Center" />

            <Label Text="X: " />
            <Label 
                Text="{Binding X}"
                FontSize="18"
                HorizontalOptions="Center" />
            <Label Text="Y: " />
            <Label 
                Text="{Binding Y}"
                FontSize="18"
                HorizontalOptions="Center" />
            <Label Text="Z: " />
            <Label 
                Text="{Binding Z}"
                FontSize="18"
                x:Name="labelZ"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maui475.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label 
                Text="価格の更新"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="ID:" />
            <Entry
                Text="{Binding Id}" />
            <Label 
                Text="Price:" />
            <Entry
                Text="{Binding Price}" />

            <Button 
                Text="更新"
                Command="{Binding OnClickedCommand}"
                HorizontalOptions="Center" />

            <Label 
                Text="{Binding Result}"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

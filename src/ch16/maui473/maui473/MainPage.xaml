<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maui473.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label 
                Text="Hello, World!"
                Grid.Row="0"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Button 
                Text="call Web API"
                FontAttributes="Bold"
                Command="{Binding OnClickedCommand}"
                HorizontalOptions="Center" />

            <Label 
                Text="{Binding Title}"
                FontSize="Default"
                HorizontalOptions="Center" />
            <Label 
                Text="{Binding Author}"
                FontSize="Default"
                HorizontalOptions="Center" />
            <Label 
                Text="{Binding Publisher}"
                FontSize="Default"
                HorizontalOptions="Center" />
            <Label 
                Text="{Binding Price}"
                FontSize="Default"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
